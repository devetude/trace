<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:layout="@layout/view_preference_category"
        android:title="@string/automation"
        app:iconSpaceReserved="false">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:icon="@drawable/ic_black_recognize_image"
            android:key="@string/parking_image_analysis_key"
            android:summary="@string/parking_image_analysis_summary"
            android:title="@string/parking_image_analysis" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:icon="@drawable/ic_black_driving"
            android:key="@string/change_to_driving_state_key"
            android:summary="@string/change_to_driving_state_summary"
            android:title="@string/change_to_driving_state" />
    </PreferenceCategory>
    <PreferenceCategory
        android:layout="@layout/view_preference_category"
        android:title="@string/information"
        app:iconSpaceReserved="false">
        <Preference
            android:defaultValue="true"
            android:icon="@drawable/ic_black_app_information"
            android:summary="@string/version_name"
            android:title="@string/current_version" />
        <Preference
            android:defaultValue="true"
            android:icon="@drawable/ic_black_document"
            android:key="@string/privacy_policy_key"
            android:title="@string/privacy_policy" />
        <Preference
            android:defaultValue="true"
            android:icon="@drawable/ic_black_android"
            android:key="@string/open_source_key"
            android:title="@string/open_source" />
    </PreferenceCategory>
</PreferenceScreen>
